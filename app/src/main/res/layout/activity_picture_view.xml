<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.htetaung.backgroundapp.PictureViewActivity">
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/save_to_storage"
        style="@style/btn"
        android:textSize="12dp"
        android:text="@string/save_to_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatButton
        style="@style/btn"
        android:layout_toRightOf="@id/save_to_storage"
        android:layout_marginLeft="30dp"
        android:text="@string/save_on_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
